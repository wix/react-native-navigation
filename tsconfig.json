{
  "extends": "./tsconfig-strict.json",
  "compilerOptions": {
    "outDir": "./lib/dist",
    "allowJs": false,
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest", "lodash", "react", "react-native", "react-test-renderer"],
    "baseUrl": ".",
    "paths": {
      "react-native-navigation": ["./src/index"],
      "react-native-navigation/*": ["./src/*"]
    }
  },
  "include": [
    "./src/**/*", "./playground/**/*",
    "Mock"
  ]
}
